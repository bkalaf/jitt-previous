{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "module": "commonjs",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "declaration": true,
    "types": ["node"],
    "allowUmdGlobalAccess": true,
    "noUnusedLocals": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/renderer.ts", "./tailwind.config.ts", "bin/**/*.ts", "bin/**/*.tsx" ]
}
